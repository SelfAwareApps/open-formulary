{% extends "base.jinja2" %}
{% block title %}Welcome!{% endblock %}

{% block content %}
  {% set active = 'home' %}
  {% include 'tabs.jinja2' %}

  <div class="row-fluid">
    <div class="span12">
      <h2>
        Create and distribute your own formularies
      </h2>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 hero-unit">
      <h3 class="red">popular formularies</h3>
      {% for formulary in popular %}
        <p>
          <a href="{{ url_for('views.formulary_detail',
                              formid=formulary['_id'].__str__()) }}">
            {{ formulary['name'] }}
          </a>
        </p>
      {% endfor %}
    </div>

    <div class="span6 hero-unit">
      <!--<h3 class="red">ccg formularies</h3>-->
      {% for formulary in ccg %}
        <p>
          <a href="{{ url_for('views.formulary_detail',
                              formid=formulary['_id'].__str__()) }}">
            {{ formulary['name'] }}
          </a>
        </p>
      {% endfor %}
    </div>


  </div>

{% endblock %}
